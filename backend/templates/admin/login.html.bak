{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - Codeteki</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 420px;
            padding: 48px 32px;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo-container h1 {
            font-size: 28px;
            font-weight: 700;
            color: #1a202c;
            margin-bottom: 8px;
        }

        .logo-container p {
            font-size: 14px;
            color: #718096;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 8px;
        }

        .form-group input {
            width: 100%;
            padding: 12px 16px;
            font-size: 14px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.3s;
            outline: none;
        }

        .form-group input:focus {
            border-color: #f9cb07;
            box-shadow: 0 0 0 3px rgba(249, 203, 7, 0.1);
        }

        .errorlist {
            list-style: none;
            margin: 8px 0;
            padding: 12px;
            background-color: #fff5f5;
            border-left: 4px solid #fc8181;
            border-radius: 4px;
        }

        .errorlist li {
            color: #c53030;
            font-size: 13px;
        }

        .submit-btn {
            width: 100%;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            color: #000;
            background: linear-gradient(135deg, #f9cb07 0%, #ffcd3c 100%);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 8px;
        }

        .submit-btn:hover {
            background: linear-gradient(135deg, #e6b800 0%, #f9cb07 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(249, 203, 7, 0.3);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        .helptext {
            display: none;
        }

        .form-row {
            margin-bottom: 16px;
        }

        .branding {
            text-align: center;
            margin-bottom: 32px;
        }

        .branding h1 {
            font-size: 32px;
            font-weight: 700;
            background: linear-gradient(135deg, #f9cb07 0%, #ffcd3c 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .footer-text {
            text-align: center;
            margin-top: 24px;
            font-size: 12px;
            color: #a0aec0;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="branding">
            <h1>Codeteki</h1>
        </div>

        <div class="logo-container">
            <h1>Admin Login</h1>
            <p>Enter your credentials to access the dashboard</p>
        </div>

        {% if form.errors %}
            <ul class="errorlist">
                {% if form.username.errors %}
                    <li>{{ form.username.errors.0 }}</li>
                {% elif form.password.errors %}
                    <li>{{ form.password.errors.0 }}</li>
                {% else %}
                    <li>Please enter the correct username and password.</li>
                {% endif %}
            </ul>
        {% endif %}

        <form method="post" action="{{ app_path }}">
            {% csrf_token %}

            <div class="form-group">
                <label for="id_username">Username</label>
                {{ form.username }}
            </div>

            <div class="form-group">
                <label for="id_password">Password</label>
                {{ form.password }}
            </div>

            <input type="hidden" name="next" value="{{ next }}">

            <button type="submit" class="submit-btn">Login</button>
        </form>

        <div class="footer-text">
            &copy; 2024 Codeteki Digital Services. All rights reserved.
        </div>
    </div>
</body>
</html>
